// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "debug:vscode-plugin",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-pont"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/packages/vscode-pont/out/**/*.js"]
    },
    {
      "name": "test:vscode-plugin",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-pont",
        "--extensionTestsPath=${workspaceFolder}/packages/vscode-pont/out/test"
      ],
      "stopOnEntry": false,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test:pont-core",
      "program": "${workspaceFolder}/scripts/jest.js",
      "args": ["pont-core", "--colors"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug:pont-core",
      "program": "${workspaceFolder}/packages/pont-core/lib/cmd.js",
      "args": [""],
      "cwd": "${workspaceFolder}/packages/pont-core/",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    }
  ]
}
